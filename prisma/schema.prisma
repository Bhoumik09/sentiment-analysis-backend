generator client {
  provider = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  roleId   Int    @default(1)
}

model Articles {
  id              String   @id @default(uuid())
  title           String
  content         String
  publishedAt     DateTime
  url             String?
  createdAt       DateTime @default(now())
  sentimentScores Float?
  sentiment       String
  startupId       String
  startup         Startups @relation("Articles", fields: [startupId], references: [id], onDelete: Cascade)
}

model Startups {
  id              String     @id @default(uuid())
  name            String
  sector          String
  findingKeywords String[]
  description     String?
  createdAt       DateTime   @default(now())
  articles        Articles[] @relation("Articles")
}
